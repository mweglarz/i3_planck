# SCOPE FOR SCRATCHPAD
mode "quick_scratchpad" {

    bindsym 1 [title="^quick"] scratchpad show, resize set 1900 1100
    bindsym Mod1+1 exec --no-startup-id terminator --title="quick"

    bindsym 2 [class="^Thunar"] scratchpad show, resize set 1200 800
    bindsym Mod1+2 exec --no-startup-id thunar

    bindsym 3 [title="^secondquick"] scratchpad show, resize set 1900 1100
    bindsym Mod1+3 exec --no-startup-id terminator --title="secondquick"

    bindsym 4 [class="^Steam"] scratchpad show, resize set 1900 1100

    bindsym s move scratchpad
    bindsym h scratchpad show

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym Ctrl+q mode "quick_scratchpad"

