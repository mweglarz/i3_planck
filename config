set $mode_system System (l) lock, (e) logout, (s) suspend, (r) reboot, (Shift+s) shutdown

mode "$mode_system" {
    bindsym l exec --no-startup-id /home/marcin/bin/mw_lock lock, mode "default"
    bindsym e exec --no-startup-id /home/marcin/bin/mw_lock logout, mode "default"
    bindsym s exec --no-startup-id /home/marcin/bin/mw_lock suspend, mode "default"
    bindsym r exec --no-startup-id /home/marcin/bin/mw_lock reboot, mode "default"
    bindsym Shift+s exec --no-startup-id /home/marcin/bin/mw_lock shutdown, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Pause mode "$mode_system"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the windowâ€™s width.
        # Pressing right will grow the windowâ€™s width.
        # Pressing up will shrink the windowâ€™s height.
        # Pressing down will grow the windowâ€™s height.
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# game mode
mode "game" {
### BASIC COMMANDS ###
    # start a terminal
    bindsym $mod+Return exec i3-sensible-terminal

    # kill focused window
    bindsym $mod+Shift+q kill

    bindsym $mod+space exec "rofi -modi combi,window,ssh -show combi -combi-modi drun,run -lines 6"

    ### END OF BASIC COMMANDS

    bindsym $mod+Escape mode "default"
}
bindsym $mod+Escape mode "game"
